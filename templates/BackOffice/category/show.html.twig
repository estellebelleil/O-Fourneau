{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block main %}
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Recettes</th>
                <td>
                    <ul>
                    
                   
                         {# {{dump(category.recipes)}} #}
                      {% for recipe in recipes %}
        {% if recipe.category is defined %}
            <li>
                <a href="{{ path('recipe_show', {'id': recipe.id}) }}">{{ recipe.name }}</a>
            </li>
        {% endif %}
    {% endfor %}
                        
                       
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_list') }}">Retour à la liste des catégories</a><br>
    <br>

    <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
    

    {# {{ include('BackOffice/category/_delete_form.html.twig') }} #}
{% endblock %}
