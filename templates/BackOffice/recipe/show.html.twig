{% extends 'base.html.twig' %}

{% block title %}{{ recipe.name }}{% endblock %}

{% block main %}
    
<div class="container">
    <table class="table">
    <thead>
            <tr>
                <th>Nom</th>
                <th>Date de publication</th>
                <th>Description</th>
                <th>Catégorie</th>
                <th>Notes</th>
                <th>Publié par</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.createdAt|date('d-m-Y') }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.category.name }}</td>
                {% if recipe.rate is defined and recipe.rate is not null %}
                    <td>{{ recipe.rate }} / 5</td> 
                {% else %}
                <td>Aucune note pour le moment</td>
                {% endif %}
                <td>{{recipe.user.name}}</td>
                
             
                   
             
            </tr>
        </tbody>
    </table>
</div>
    <a href="{{ path('recipe_list') }}">retour à la liste des recettes</a><br>
<br>
    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">modifier</a><br>

    {# {{ include('BackOffice/recipe/_delete_form.html.twig') }} #}
{% endblock %}
